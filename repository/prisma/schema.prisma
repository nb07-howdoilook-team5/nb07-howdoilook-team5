generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model style{
  id          BigInt    @id @default(autoincrement())
  nickname    String
  title    String
  password    String
  description String    @default("") 
  tags        String[]  @default([])
  created_at  DateTime  @default(now()) @db.Timestamptz(6)
  updated_at  DateTime? @updatedAt      @db.Timestamptz(6)
  curations   curation[]
  style_counts	 style_count[]
}

model style_count{
  id          BigInt    @id @default(autoincrement())
  style_id BigInt
  view_count  Int  @default(0) 
  style        style   @relation(fields: [style_id],references: [id],onDelete: Cascade)
}

model curation {
  id          BigInt    @id @default(autoincrement())
  nickname    String
  content     String    @default("") 
  password    String
  trendy      Int
  personality Int
  practicality Int
  cost_effectiveness Int
  style_id      BigInt
  style        style   @relation(fields: [style_id],references: [id],onDelete: Cascade)
  curation_comment   curation_comment?

}


model curation_comment {
  id          BigInt    @id @default(autoincrement())
  nickname    String
  content     String    @default("") 
  password    String
  curation_id  BigInt    @unique
  curation    curation  @relation(fields: [curation_id],references: [id],onDelete: Cascade)
}
